= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
  .form-signin
    %h4.form-signin-header Change your password
    = f.error_notification
    = f.input :reset_password_token, as: :hidden
    = f.full_error :reset_password_token
    = f.input :password, required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: false, placeholser:"New Password"
    = f.input :password_confirmation, label: false, placeholder: "Confirm your new password", required: true
    = f.button :submit, "Change my password", :class => "btn btn-lg btn-danger btn-block"
    %hr
    .text-center
      = render "devise/shared/links"