.row
  .pull-right
    %a.icon.icon-documents{:onclick=> "switchView()"} swtich view
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
.row#v1
  =render 'card_view_v1'
.row#v2{:style=>"display:none;"}
  =render 'card_view_v2'



:javascript
  function switchView(){
  	if ($('#v1').is(":visible") == true){
      $('#v1').hide();
      $('#v2').show();
    }
    else{
      $('#v1').show();
      $('#v2').hide();
    }     
  }