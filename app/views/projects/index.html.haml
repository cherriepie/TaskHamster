-if notice.present?
  .alert.alert-info.alert-dismissible.fade.in{:role => "alert"}
    %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
      %span{"aria-hidden" => "true"} &times;
    = notice
 
-if @projects.present?
  .row
    .pull-right
      %a.icon.icon-documents{:onclick=> "switchView()"} swtich view
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  .row#v1
    =render 'card_view_v1'
  .row#v2{:style=>"display:none;"}
    =render 'card_view_v2'
-else 
  .form-signin.text-center
    .alert.alert-info{:role => "alert"}
      %strong Welcome to TaskHamster!
      %p 
        Start by 
        %a.icon.icon-new-message{:href => new_project_path }
          creating your first project!

:javascript
  function switchView(){
  	if ($('#v1').is(":visible") == true){
      $('#v1').hide();
      $('#v2').show();
    }
    else{
      $('#v1').show();
      $('#v2').hide();
    }     
  }